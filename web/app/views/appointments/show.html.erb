<p id="notice"><%= notice %></p>
<article class="article">
  <h2>Datos del turno</h2>
  <p>
    <strong>Fecha y hora:</strong>
    <%= @appointment.date.strftime("%d/%m/%y - ") + @appointment.time.strftime("%H:%M hs") %>
  </p>

  <p>
    <strong>Profesional:</strong>
    <%= professional_id_to_fullname(@appointment.professional_id) %>
  </p>

  <p>
    <strong>Nombre completo:</strong>
    <%= @appointment.full_name %>
  </p>

  <p>
    <strong>Telefono:</strong>
    <%= @appointment.phone %>
  </p>

  <p>
    <strong>Notas:</strong>
    <%= @appointment.notes %>
  </p>
</article>
<div class="action">
  <%= link_to 'Editar', edit_appointment_path(@appointment) if allowed_to?(:edit?, @appointment)%> |
  <%= link_to 'Cancelar turno',  @appointment, method: :delete, data: { confirm: 'Estas seguro que deseas cancelar el turno?' } if allowed_to?(:destroy?, @appointment)%> |
  <%= link_to 'Volver al listado', appointments_path %>
</div>
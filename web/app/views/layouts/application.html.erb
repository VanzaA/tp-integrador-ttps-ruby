<!DOCTYPE html>
<html lang="es">
  <head>
    <title>Polycon</title>
    <meta name="viewport" content="width=device-width,initial-scale=1">
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>
    <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <main class="container">
      <div>
        <% if logged_in? %>
          <%= button_to 'Profesionales', professionals_path, method: :get %>
          <%= button_to 'Turnos', appointments_path, method: :get %>
          <%= button_to 'Cerrar sesion', session_path, method: :delete %>
        <% else %>
          <%= button_to 'Iniciar sesion', session_path, method: :show %>
        <% end %>
        <div>
          <%= current_user  %>
        </div>

      </div>
      <%= yield %>
    </main>
  </body>
</html>

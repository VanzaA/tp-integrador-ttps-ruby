<p id="notice"><%= notice %></p>

<div class="action-header">
  <h1>Profesionales</h1>
  <%= link_to 'Crear profesional', new_professional_path, class: "action" if allowed_to?(:new?) %>
</div>

<table>
  <thead>
    <tr>
      <th>Nombre</th>
      <th>Apellido</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @professionals.each do |professional| %>
      <tr>
        <td><%= professional.name %></td>
        <td><%= professional.surname %></td>

        <td><%= link_to 'Editar', edit_professional_path(professional) if allowed_to?(:edit?, professional)%></td>
        <td><%= link_to 'Borrar', professional, method: :delete, data: { confirm: 'Esta seguro de que desea borrar?' } if allowed_to?(:destroy?, professional) %></td>
        <td><%= link_to 'Cancelar turnos', cancel_all_appointments_professional_path(professional.id, professional), method: :post, data: { confirm: 'Esta seguro de que desea cancelar todos los turnos?' } if can_cancel_all(professional) && allowed_to?(:cancel_all_appointments?, professional) %></td>
      </tr>
    <% end %>
  </tbody>
</table>

